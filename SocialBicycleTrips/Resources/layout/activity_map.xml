
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:design="http://schema.android.com/apk/res/android.support.design"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/darker_gray">
        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/map"
            class="com.google.android.gms.maps.SupportMapFragment"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="70dp"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:id="@+id/frameLocations"
                android:background="#ffffff">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_height="1dp"
                        android:layout_width="match_parent"
                        android:layout_weight="0.5"
                        android:clickable="true"
                        android:id="@+id/layoutStart">
                            <ImageView
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/greendot"/>
                            <TextView
                                android:id="@+id/txtStartLocation"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Start Location"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="30dp"
                                android:maxLines="2"
                                android:gravity="center_vertical"
                                android:layout_marginRight="36dp"/>
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/startRadio"
                                android:layout_gravity="end"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_gravity="end"
                                android:layout_alignParentBottom="true"
                                android:background="@android:color/darker_gray"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="0.5"
                        android:clickable="true"
                        android:id="@+id/layoutEnd">
                            <ImageView
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/reddot"/>
                            <TextView
                                android:id="@+id/txtEndLocation"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="End Location"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="30dp"
                                android:maxLines="2"
                                android:gravity="center_vertical"
                                android:layout_marginRight="36dp"/>
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/endRadio"
                                android:layout_gravity="end"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"/>

                    </RelativeLayout>
                </LinearLayout>
        </FrameLayout>
    </LinearLayout>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:id="@+id/centerMarker"
            android:src="@drawable/locationmarkericon"
            android:tint="#00FF00"/>
        <RelativeLayout
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:clickable="true"
            android:id="@+id/currentLocation"
            android:layout_gravity="center|right"
            android:background="@android:color/white"
            android:layout_marginRight="16dp">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@android:drawable/ic_menu_mylocation"
               android:backgroundTint="@android:color/holo_orange_dark"/>
        </RelativeLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:text="Done"
            android:textAllCaps="false"
            android:layout_marginBottom="30dp"
            android:background="@android:color/holo_orange_dark"
            android:translationZ="4dp"
            android:visibility="invisible"
            android:id="@+id/btnFinished"/>
    </FrameLayout>
</LinearLayout>